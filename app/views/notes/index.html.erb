<!-- Shows all notes to a user -->

<h1>Notes</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @notes.each do |note| %>
    <tr>
      <td><%= note.title %></td>
    </tr>
    <tr>
      <td class="button "><%= link_to 'Show', note, class: "btn btn-dark" %></td>
      <td class="button "><%= link_to 'Edit', edit_note_path(note), class: "btn btn-dark" %></td>
      <td class="button "><%= link_to 'Destroy', note, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-dark" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path, class: "btn btn-dark" %>

